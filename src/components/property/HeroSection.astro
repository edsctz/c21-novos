---
import type { PropertyConfig } from '../../config/properties';

interface Props {
  config: PropertyConfig;
  content: any;
}

const { config, content } = Astro.props;
---

<section class="hero-section">
  <div class="hero-background">
    <img 
      src={config.images.hero}
      alt={`${config.fullName} - Fachada do empreendimento`}
      class="hero-image"
      loading="eager"
    />
    <div class="hero-overlay"></div>
  </div>
  
  <div class="hero-content">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="hero-title">
          {content.headline}
          <span class="hero-subtitle">{content.subheadline}</span>
        </h1>
        
        <p class="hero-description">
          {content.description}
        </p>
        
        <div class="hero-specs">
          <div class="spec-item">
            <span class="spec-value">{config.specs.bedrooms}</span>
            <span class="spec-label">Su√≠tes</span>
          </div>
          <div class="spec-divider"></div>
          <div class="spec-item">
            <span class="spec-value">{config.specs.area}</span>
            <span class="spec-label">√Årea</span>
          </div>
          <div class="spec-divider"></div>
          <div class="spec-item">
            <span class="spec-value">{config.specs.parking}</span>
            <span class="spec-label">Vagas</span>
          </div>
        </div>
        
        <div class="hero-ctas">
          <a 
            href="#lead-form"
            class="cta-primary"
          >
            üìã {content.cta}
          </a>
          
          <a 
            href={`https://wa.me/${config.contact.whatsapp}?text=Ol√°! Quero mais informa√ß√µes sobre o ${config.name}.`}
            target="_blank"
            rel="noopener noreferrer"
            class="cta-secondary whatsapp-button"
            data-whatsapp-action="get_info"
            data-whatsapp-location="hero_section"
          >
            üì± WhatsApp
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // GTM WhatsApp tracking for Hero Section
  document.addEventListener('DOMContentLoaded', function() {
    const whatsappButtons = document.querySelectorAll('.whatsapp-button');
    
    whatsappButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        const action = this.getAttribute('data-whatsapp-action') || 'click';
        const location = this.getAttribute('data-whatsapp-location') || 'unknown';
        
        // Fire GTM event
        if (typeof window.dataLayer !== 'undefined') {
          window.dataLayer.push({
            event: 'whatsapp_click',
            whatsapp_action: action,
            whatsapp_location: location,
            whatsapp_url: this.href
          });
        }
        
        // Also fire gtag event if available
        if (typeof gtag !== 'undefined') {
          gtag('event', 'whatsapp_click', {
            event_category: 'WhatsApp',
            event_label: `${location}_${action}`,
            value: 1
          });
        }
        
        console.log('WhatsApp click tracked:', {
          event: 'whatsapp_click',
          action: action,
          location: location,
          url: this.href
        });
      });
    });
  });
</script>
