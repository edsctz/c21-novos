---
import type { PropertyConfig } from '../../config/properties';

interface Props {
  config: PropertyConfig;
  content: any;
}

const { config, content } = Astro.props;
---

<section class="specs-section">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        {content.title}
      </h2>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
      {content.items.map((item) => (
        <div class="spec-card">
          <div class="spec-icon">
            {item.icon}
          </div>
          <h3 class="spec-title">
            {item.title}
          </h3>
          <p class="spec-description">
            {item.description}
          </p>
        </div>
      ))}
    </div>
    
    <!-- Features Grid -->
    <div class="mt-16">
      <h3 class="text-2xl font-bold text-gold text-center mb-8">
        Lazer Completo
      </h3>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 max-w-4xl mx-auto">
        {config.features.map((feature) => (
          <div class="feature-item">
            <span class="feature-text">{feature}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
