---
import type { PropertyConfig } from '../config/properties';
import Layout from '../layouts/Layout.astro';
import Header from './Header.astro';
import HeroSection from './property/HeroSection.astro';
import PropertySpecs from './property/PropertySpecs.astro';
import LeadForm from './LeadForm.astro';
import LeadFormSticky from './LeadFormSticky.jsx';
import Footer from './Footer.astro';

interface Props {
  config: PropertyConfig;
  content: any;
}

const { config, content } = Astro.props;
