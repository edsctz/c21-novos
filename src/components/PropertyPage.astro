---
import type { PropertyConfig } from '../config/properties';
import Layout from '../layouts/Layout.astro';
import Header from './Header.astro';
import HeroSection from './property/HeroSection.astro';
import PropertySpecs from './property/PropertySpecs.astro';
import LeadFormSticky from './LeadFormSticky.jsx';
import Footer from './Footer.astro';

interface Props {
  config: PropertyConfig;
  content: any;
}

const { config, content } = Astro.props;
---

<Layout 
  title={config.seo.title}
  description={config.seo.description}
  gtmId={config.gtmId}
>
  <!-- Header Navigation -->
  <Header config={config} />
  
  <!-- Hero Section -->
  <HeroSection config={config} content={content.hero} />
  
  <!-- Property Specifications -->
  <PropertySpecs config={config} content={content.specs} />
  
  <!-- Lead Form Section -->
  <section class="form-section" id="lead-form">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          {content.form.title.split(' ').map((word, index) => 
            word === 'Pre√ßos' ? <span class="text-gold">{word}</span> : word + ' '
          )}
        </h2>
        <p class="text-xl text-gray-300 mb-8">
          {content.form.description}
        </p>
        
        <div class="form-container">
          <form class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="nome" class="form-label">Nome Completo *</label>
              <input 
                type="text" 
                id="nome" 
                name="nome" 
                required
                class="form-input"
                placeholder="Seu nome completo"
              />
            </div>
            
            <div>
              <label for="email" class="form-label">Email *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="form-input"
                placeholder="seu@email.com"
              />
            </div>
            
            <div>
              <label for="telefone" class="form-label">WhatsApp *</label>
              <input 
                type="tel" 
                id="telefone" 
                name="telefone" 
                required
                class="form-input"
                placeholder="(11) 99999-9999"
              />
            </div>
            
            <div>
              <label for="interesse" class="form-label">Interesse</label>
              <select 
                id="interesse" 
                name="interesse"
                class="form-input"
              >
                <option value="comprar">Comprar para morar</option>
                <option value="investir">Investir</option>
                <option value="informacoes">Apenas informa√ß√µes</option>
              </select>
            </div>
            
            <div class="md:col-span-2">
              <label for="mensagem" class="form-label">Mensagem (opcional)</label>
              <textarea 
                id="mensagem" 
                name="mensagem" 
                rows="4"
                class="form-input resize-none"
                placeholder="Conte-nos mais sobre seu interesse..."
              ></textarea>
            </div>
            
            <div class="md:col-span-2">
              <button 
                type="submit"
                class="form-button"
              >
                {content.form.cta}
              </button>
            </div>
          </form>
          
          <div class="mt-6 text-center">
            <p class="text-sm text-gray-400">
              Ao enviar, voc√™ concorda com nossa 
              <a href="/politica-privacidade" class="text-gold hover:underline">Pol√≠tica de Privacidade</a>
              e autoriza o contato via WhatsApp, email e telefone.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Neighborhood Section -->
  <section class="py-16 bg-digital-black">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          {content.location.title.split(' ').map((word, index) => 
            word === 'Privilegiada' ? <span class="text-gold">{word}</span> : word + ' '
          )}
        </h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          {content.location.description}
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <div>
          <h3 class="text-2xl font-bold text-gold mb-6">Proximidades</h3>
          <div class="space-y-4">
            {content.location.proximities.map((proximity) => (
              <div class="flex items-center">
                <div class="w-3 h-3 bg-relentless-gold rounded-full mr-4"></div>
                <span class="text-gray-300">{proximity}</span>
              </div>
            ))}
          </div>
          
          <div class="mt-8">
            <h4 class="text-lg font-semibold text-white mb-4">Valoriza√ß√£o Imobili√°ria</h4>
            <p class="text-gray-300 text-sm leading-relaxed">
              Alphaville √© reconhecida como a regi√£o de maior valoriza√ß√£o imobili√°ria de Barueri, 
              com crescimento constante nos √∫ltimos 10 anos. Investir aqui √© garantia de retorno.
            </p>
          </div>
        </div>
        
        <div class="bg-obsessed-grey rounded-2xl p-2 border border-digital-medium-grey">
          <img 
            src={config.images.location}
            alt={`Vista a√©rea de ${config.location} - Localiza√ß√£o privilegiada`}
            class="w-full h-80 object-cover rounded-xl"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Final -->
  <section class="py-16 bg-gradient-gold">
    <div class="container text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-digital-black mb-4">
        {content.finalCta.title}
      </h2>
      <p class="text-xl text-digital-black mb-8 max-w-3xl mx-auto">
        {content.finalCta.description}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href={`https://wa.me/${config.contact.whatsapp}?text=${encodeURIComponent(content.finalCta.whatsappText)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-digital-black text-relentless-gold font-bold py-4 px-8 rounded-lg text-lg hover:bg-obsessed-grey transition-all duration-300 hover:scale-105"
        >
          üì± Agendar Visita via WhatsApp
        </a>
        
        <a 
          href={`tel:${config.contact.phone}`}
          class="bg-transparent border-2 border-digital-black text-digital-black font-bold py-4 px-8 rounded-lg text-lg hover:bg-digital-black hover:text-relentless-gold transition-all duration-300 hover:scale-105"
        >
          üìû Ligar Agora
        </a>
      </div>
    </div>
  </section>
  
  <!-- Sticky Lead Form (Mobile) -->
  <LeadFormSticky client:load />
  
  <!-- Footer -->
  <Footer config={config} />
</Layout>

<script>
  // Form submission handling
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('#lead-form form');
    
    if (form) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        // Add UTM data
        const utmData = JSON.parse(localStorage.getItem('utmData') || '{}');
        const submitData = {
          ...data,
          ...utmData,
          timestamp: new Date().toISOString(),
          page_url: window.location.href
        };
        
        try {
          alert('Obrigado! Em breve entraremos em contato com todas as informa√ß√µes.');
          form.reset();
        } catch (error) {
          console.error('Error:', error);
          alert('Erro ao enviar formul√°rio. Tente novamente ou entre em contato via WhatsApp.');
        }
      });
    }
  });
</script>
